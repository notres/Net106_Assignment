@page "/detailnhanvien/{NhanVienId}"
@using _2.Data.ModelsClass;
@using _3.Admin.IServices;

@inject IAllServices services
@if (nv == null)
{
        <div class="spinner-border"></div>
}

else
{
    <div>
        <h3>Detail</h3>
        <hr />
        <dl class="row">

            <dt class="col-sm-2">
                Ảnh
            </dt>
            <dd class="col-sm-10">
                @if(nv.AnhNhanVien == "")
                {
                    <img src="@("/AnhNhanVien/default.png")" alt="@("/AnhNhanVien/avt.jpg")" width="70" />
                }
                else
                {
                    <img src="@("/AnhNhanVien/"+nv.AnhNhanVien)" alt="@("/AnhNhanVien/avt.jpg")" width="70" />
                }
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @nv.Email
            </dd>
            <dt class="col-sm-2">
                Tên
            </dt>
            <dd class="col-sm-10">
                @nv.Ten
            </dd>
            <dt class="col-sm-2">
                Mật Khẩu
            </dt>
            <dd class="col-sm-10">
                @nv.MatKhau
            </dd>
            <dt class="col-sm-2">
                Địa Chỉ
            </dt>
            <dd class="col-sm-10">
                @nv.DiaChi
            </dd>
            <dt class="col-sm-2">
                Giới tính
            </dt>
            <dd class="col-sm-10">
                @(nv.GioiTinh ? "Nam" : "Nữ")
            </dd>
            <dt class="col-sm-2">
                Số điện thoại
            </dt>
            <dd class="col-sm-10">
                @nv.Sdt
            </dd>
            <dt class="col-sm-2">
                Trạng thái
            </dt>
            <dd class="col-sm-10">
                @(nv.TrangThai ? "Hoạt động" : "Ngừng hoạt động")
            </dd>
        </dl>
    </div>
    <div>
        <a href="/editnhanvien/@nv.Id">Edit</a> |
        <a href="viewnhanvien">Back to List</a>
    </div>
}


@code {
    [Parameter]
    public string NhanVienId { get; set; }

    public NhanVien nv { get; set; }

    protected override async Task OnInitializedAsync()
    {
        nv = await services.GetById<NhanVien>("https://localhost:7095/api/NhanViens/GetById/", Guid.Parse(NhanVienId));
    }
}
